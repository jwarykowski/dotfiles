# restart yabai
ctrl + alt + cmd - r : yabai --restart-service

# navigation within windows
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

# moving windows
shift + alt - h : yabai -m window --warp west
shift + alt - j : yabai -m window --warp south
shift + alt - k : yabai -m window --warp north
shift + alt - l : yabai -m window --warp east

# moving monitor
# ctrl + alt - x  : yabai -m display --focus recent
# ctrl + alt - z  : yabai -m display --focus prev
# ctrl + alt - c  : yabai -m display --focus next
ctrl + alt + shift - 1  : yabai -m display --focus 1
ctrl + alt + shift - 2  : yabai -m display --focus 2
ctrl + alt + shift - 3  : yabai -m display --focus 3

# misc windows
# toggle window zoom
alt - t : yabai -m window --toggle zoom-parent

# toggle window split type
alt - e : yabai -m window --toggle split

# toggle whether the focused window should be tiled (only on bsp spaces)
alt - f : yabai -m window --toggle float

# increase window size
# shift + alt - a : yabai -m window --resize left:-50:0
# shift + alt - s : yabai -m window --resize bottom:0:50
# shift + alt - w : yabai -m window --resize top:0:-50
# shift + alt - d : yabai -m window --resize right:50:0
#
# shift + cmd - s : yabai -m window --resize bottom:0:-50
# shift + cmd - w : yabai -m window --resize top:0:50
# shift + cmd - d : yabai -m window --resize right:-50:0
# change layout of desktop
ctrl + alt - z : yabai -m space --layout bsp
ctrl + alt - f : yabai -m space --layout float
